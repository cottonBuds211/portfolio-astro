---
const { date, title, description, link, img } = Astro.props;
---

<div
  class="flex flex-col lg:flex-row gap-4 justify-between items-center pl-8 transition-all ease-in duration-200 rounded-md cursor-default"
>
  <div class="flex flex-1 flex-col gap-2">
    <h4 class="text-sm">{date}</h4>
    <h3 class="text-2xl">{title}</h3>
    <p class="text-secondary leading-6">{description}</p>
    <a class="flex gap-2 items-center cursor-pointer text-secondary"
      >{link}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-external-link-icon lucide-external-link"
        ><path d="M15 3h6v6"></path><path d="M10 14 21 3"></path><path
          d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
        ></path></svg
      ></a
    >
  </div>
  <div
    class="flex-1 w-full  border-1 border-gray-200/50 rounded-lg overflow-hidden p-1 bg-gray-500/10"
  >
    <img
      src={img.src}
      class="object-cover rounded-lg transition-all duration-300 hover:scale-105 cursor-pointer"
    />
  </div>
</div>
