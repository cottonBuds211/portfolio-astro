---
import Button from "../components/Button.astro";
import Experience from "../components/Experience.astro";
import Project from "../components/Project.astro";
import Technology from "../components/Technology.astro";
import { toolStack } from "../data/data";
import { backEndStack } from "../data/data";
import { frontEndStack } from "../data/data";
import Layout from "../layouts/Layout.astro";
import bantali from "../assets/images/bantali.png";
import "../styles/global.css";
---

<Layout pageTitle="Manuel">
  <header
    id="top"
  >
    <div
      class="relative w-full h-screen flex flex-col justify-center items-center text-center gap-5"
    >
    
      <p class="text-7xl font-bold
         font-opensans  uppercase">
        <span class="hi inline-block">Hi,</span>
        <span class="im"> Im </span>
        <span class="name inline-block text-highlight text-glow">
          Manuel Dalacan
        </span>

        <br />
        <span class="description">
          {
            "a full stack developer"
              .split("")
              .map((char) => (
                <span class="inline-block opacity-0 -translate-y-2">
                  {char === " " ? "\u00A0" : char}
                </span>
              ))
          }
        </span>
      </p>
      <div
        class="subtitle inline-block opacity-0 -translate-y-8 text-md text-secondary"
      >
        <p>
          As a fullstack developer, I build modern web apps with tools like
          <br />
          <span class="text-highlight text-glow">
            React, Astro.js, Next.js & Tailwind CSS.
          </span>
        </p>

        <div class="flex justify-center pt-4 gap-4">
          <Button title="Resumé" />
          <Button title="Contact" />
        </div>
      </div>
      <a
        class="scroll-round absolute bottom-30 flex justify-center items-center rounded-full shadow-2xl w-15 h-15 bg-white opacity-0"
        href="#about"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="30"
          height="30"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-arrow-down-icon lucide-arrow-down"
          ><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"></path></svg
        >
      </a>
    </div>
  </header>

  <span id="about"></span>
  <main class="max-w-[80ch] mx-5 md:mx-auto my-20">
    <div class="flex flex-col gap-20">
      <section>
        <h2>About Me</h2>
        <div class=" leading-8 text-gray-500 px-5 space-y-5 grid lg:grid-cols-3 gap-5 ">
          <p >
            Hi, I'm a Junior software developer with a strong foundation
            in JavaScript, React, Node.js. I enjoy building clean, user-friendly
            applications and solving real-world problems through code. 
          </p>
          <p>I’m
            particularly interested in full-stack development, frontend
            frameworks, clean UI/UX, scalable backend systems, and I'm always
            eager to learn new technologies and collaborate with others. In the
            next few years, </p>
            <p>
              I hope to grow into a Senior Developer or Technical
            Lead, helping deliver impactful products while mentoring others and
            continuously improving as a developer.
            </p>
          
        </div>
      </section>
      <span id="experience"></span>
      <section>
        <h2>Experience</h2>
        <div class="relative flex flex-col pb-10 last:pb-0 gap-2">
          <!-- Line -->
          <span
            class="absolute w-[1px] left-[.5rem] top-[.5rem] h-full bg-gradient-to-b from-black to-transparent to-99%"
          ></span>
          <Experience
            date="Jan - Apr 2025"
            location="Muntinlupa City"
            position="Web Dev Intern"
            company="Advanced World Solutions"
          />
        </div>
      </section>
      <span id="projects" class="w-full h-px bg-black/10"></span>

      <section>
        <h2>Projects</h2>
        <!-- <HorizontalLine /> -->
        <div class="relative flex flex-col gap-5">
          <Project
            date="Dec 2024"
            title="OpticalRecords"
            description="A records management, appointment tracking and inventory all in one."
            link="github.com"
            img={bantali}
          />
        </div>
      </section>
      <span id="skills" class="w-full h-px bg-black/10"></span>

      <section>
        <h2>Tehchnical Knowledge</h2>
        <!-- <HorizontalLine /> -->
        <div class="flex flex-col gap-4 p-4">
          <h3>Front-End</h3>
          <div class="flex flex-wrap gap-2">
            {
              frontEndStack.map((item) => (
                <Technology
                  color={item.color}
                  title={item.title}
                  logo={item.logo}
                />
              ))
            }
          </div>
          <h3>Back-End</h3>
          <div class="flex flex-wrap gap-1">
            {
              backEndStack.map((item) => (
                <Technology
                  color={item.color}
                  title={item.title}
                  logo={item.logo}
                />
              ))
            }
          </div>
          <h3>Tools</h3>
          <div class="flex flex-wrap gap-1">
            {
              toolStack.map((item) => (
                <Technology
                  color={item.color}
                  title={item.title}
                  logo={item.logo}
                />
              ))
            }
          </div>
        </div>
      </section>
      <span id="contacts" class="w-full h-px bg-black/10"></span>

      <section>
        <h2>Contact</h2>
        <!-- <HorizontalLine /> -->
        <div>
          <h2>Lets get in touch!</h2>
          <p>You can reach me at my e-mail.</p>
        </div>
      </section>
    </div>
  </main>
</Layout>

<script>
  import gsap from "gsap";

  const timeline = gsap.timeline({ defaults: { duration: 1, ease: "power1" } });
  timeline
    .from(".hi", { opacity: 0 })
    .from(".im", { opacity: 0 })
    .from(".name", {
      opacity: 0,
      y: "-20%",
      duration: 0.5,
      ease: "bounce",
    })
    .to(".description span", {
      y: 0,
      opacity: 1,
      duration: 0.3,
      stagger: 0.05,
      repeat: 0,
      ease: "power2.out",
    });

  const subTimeline = gsap.timeline({ defaults: { duration: 1 } });
  subTimeline
    .to(".subtitle", {
      opacity: 1,
      y: 0,
      ease: "bounce",
      delay: 4,
    })
    .to(".scroll-round", { opacity: 1, scale: 1.1, ease: "power1.in" })
    .from(".scroll-round", { scale: 1, ease: "power1.out", duration: 1 });
</script>
